<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/17.0.2-ea"
            fx:controller="com.dinus.HomeController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom right, #ffffff, #e0f7fa);">

    <children>
        <VBox alignment="TOP_CENTER" spacing="20" layoutX="50" layoutY="30" prefWidth="800">
            <children>

                <Label text="📚 Selamat Datang di Sistem KRS (Kartu Rencana Studi)"
                       style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2b2d42;" />

                <Label text="Platform ini dirancang khusus untuk membantu mahasiswa dan dosen dalam proses perencanaan, pengelolaan, dan monitoring kegiatan akademik secara efisien. "
                       wrapText="true"
                       textAlignment="CENTER"
                       style="-fx-font-size: 16px; -fx-text-fill: #555555;"
                       maxWidth="700"/>

                <Label text="🔹 Fitur Unggulan:"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #0077b6;"/>

                <VBox spacing="8" style="-fx-font-size: 14px; -fx-text-fill: #333333;">
                    <children>
                        <Label text="✅ Pengelolaan Data Mahasiswa secara dinamis."/>
                        <Label text="✅ Input dan Update Data Mata Kuliah dan Dosen."/>
                        <Label text="✅ Pengisian KRS dengan pilihan status Baru atau Ulang."/>
                        <Label text="✅ Jadwal kuliah lengkap dengan ruang, waktu, dan dosen pengampu."/>
                        <Label text="✅ Tampilan yang responsif, ringan, dan mudah digunakan."/>
                    </children>
                </VBox>

                <Separator prefWidth="600"/>

                <Label text="🛠️ Tips Penggunaan:"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #ef476f;" />

                <Label text="Gunakan menu navigasi di sisi kiri untuk mengakses fitur seperti Mahasiswa, Dosen, Mata Kuliah, Jadwal, dan KRS. Pastikan data dosen dan mata kuliah terdaftar sebelum menyusun KRS."
                       wrapText="true"
                       textAlignment="CENTER"
                       style="-fx-font-size: 14px; -fx-text-fill: #4a4a4a;"
                       maxWidth="700"/>

                <Label text="✨ Semoga sukses menyusun rencana studi dan mencapai prestasi terbaik di kampus!"
                       style="-fx-font-size: 14px; -fx-text-fill: #6a1b9a;" />

            </children>
            <padding>
                <Insets top="20" bottom="20" left="20" right="20"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
